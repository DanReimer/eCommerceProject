<% provide(:title, @product.name) %>
<h1><%= @product.name %></h1>
<div class="row">
  <div class="card col-md-4">
    <% if @product.image.attached? %>
      <figure>
        <%= image_tag @product.image.variant(resize: '200x200') %>
      </figure>
    <% end %>
    <h5 class="text-primary"><%= number_to_currency @product.price %></h5>
    <%= form_for OrderItem.new, url: {action: "create"} do |f| %>
      <p>Pick A Colour:</p>
      <% @product.colours.each do |colour| %>
        <div class="form-check" style="background-color: <%= colour.hexcode %>">
          <%= f.radio_button :colour_id, colour.id %>
        </div>
      <% end %>
      <hr>
      <%= f.number_field :quantity, 1, class: 'form-control' %>
      <%= f.submit 'Add To Cart', class: 'btn btn-primary mt-1' %>
    <% end %>
  </div>
  <div class="col-md-8">
    <%= tag.p @product.category.name, class: 'text-muted' %>
    <hr>
    <%= simple_format @product.description %>
  </div>
</div>
