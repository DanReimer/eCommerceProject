<% provide(:title, "Home") %>
<div class="jumbotron">
  <h1>PAPER FOR PAPER <small>FILE STORAGE SOLUTIONS</small></h1>
  <p>Bringing you document storage when no one else will since 1998.</p>
</div>
<h2>Browse Products</h2>
<section id="categories">
  <% @categories.each do |category| %>
    <div class="card mb-3">
      <div class="card-header" data-toggle="collapse" data-target="#category<%= category.id %>">
        <h4><%= category.name %><span class="float-right fas fa-chevron-down"></span></h4>
      </div>
      <div id="category<%= category.id %>" class="collapse">
        <div class="card-body">
          <div class="row">
            <% category.products.each do |product| %>
              <div class="card product-card">
                <%= link_to '', product_path(product), class: 'block-link' %>
                <div class="card-header p-0">
                  <% if product.image.attached? %>
                    <%= image_tag product.image.variant(resize: '150x150'), class: 'w-100' %>
                  <%end %>
                </div>
                <div class="card-body">
                  <p class="card-text">
                    <%= product.name %>
                    <br>
                    <span class="small text-primary"><%= number_to_currency product.price %></span>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>
