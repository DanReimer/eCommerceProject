<div class="card">
  <div class="card-body row">
    <div class="col-sm-7">
      <h4>
        <%= product.name %><br>
        <%= colour.name %>
      </h4>
    </div>
    <div class="col-sm-5">
      <%= form_for order_item, remote: true do |f| %>
        <h5 class="text-right">Item Price: <span class="text-primary"><%= number_to_currency order_item.price_per_item %></span></h5>
        <h5 class="text-right">Item Total: <span class="text-primary"><%= number_to_currency order_item.total_price %></span></h5>
        <div class="row">
          <div class="col-xs-4 ml-auto">
            <%= f.number_field :quantity, value: order_item.quantity, class: "form-control", min: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.hidden_field :colour_id, value: colour.id %>
          </div>
          <div class="col-xs-8 ml-auto text-right">
            <%= f.submit "Update Quantity", class: "btn btn-secondary" %>
            <%= link_to order_item, { data: { confirm: "Are you sure you wish to delete the product '#{product.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-link" } do %>
              <i class="fas fa-trash text-error"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>