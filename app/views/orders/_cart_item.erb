<div class="card">
  <div class="card-body row">
    <div class="col-sm-8">
      <h4>
        <%= product.name %><br>
        <%= colour.name %>
      </h4>
    </div>
    <div class="col-sm-4">
      <%= form_for order_item, remote: true do |f| %>
        <h4 class="text-right">Price: <span class="text-primary"><%= number_to_currency order_item.price_per_item %></span></h4>
        <div class="row">
          <div class="col-xs-4">
            <%= f.number_field :quantity, value: order_item.quantity, class: "form-control", min: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.hidden_field :colour_id, value: colour.id %>
          </div>
          <div class="col-xs-8 text-right">
            <div class="btn-group">
              <%= f.submit "Update Quantity", class: "btn btn-secondary" %>
              <%= link_to order_item, { data: { confirm: "Are you sure you wish to delete the product '#{product.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-link" } do %>
                <i class="fas fa-trash text-error"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>