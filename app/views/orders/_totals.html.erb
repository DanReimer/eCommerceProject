<div class="row">
  <div class="col-sm-4 offset-sm-8">
    <table class="table">
      <tr>
        <td><strong>Subtotal:</strong></td>
        <td class="text-right"><strong><%= number_to_currency order.subtotal %></strong></td>
      </tr>
      <% unless just_subtotal %>
        <% unless order.gst_amount.nil? %>
          <tr>
            <td>GST(<%= number_to_percentage(order.gst_rate * 100, precision: 0)%>):</td>
            <td class="text-right"><%= number_to_currency order.gst_amount %></td>
          </tr>
        <% end %>
        <% unless order.pst_amount.nil? %>
          <tr>
            <td>PST(<%= number_to_percentage(order.pst_rate * 100, precision: 0)%>):</td>
            <td class="text-right"><%= number_to_currency order.pst_amount %></td>
          </tr>
        <% end %>
        <% unless order.hst_amount.nil? %>
          <tr>
            <td>HST(<%= number_to_percentage(order.hst_rate * 100, precision: 0)%>):</td>
            <td class="text-right"><%= number_to_currency order.hst_amount %></td>
          </tr>
        <% end %>
        <tr class="text-primary">
          <td><h4>Total:</h4></td>
          <td class="text-right"><h4><%= number_to_currency order.total %></h4></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>