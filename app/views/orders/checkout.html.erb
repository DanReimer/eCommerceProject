<div class="row">
  <div class="col-sm-12">
    <table class="table">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th class="text-center">Quantity</th>
          <th class="text-center">Unit Price</th>
          <th class="text-center">Total Price</th>
        </tr>
      </thead>
      <tbody>
      <% @order_items.each do |order_item| %>
        <tr>
          <td colspan="2"><%= order_item.product.name %><small> - [<%= order_item.colour.name %>]</small></td>
          <td class="text-center"><%= order_item.quantity %></td>
          <td class="text-right"><%= number_to_currency order_item.price_per_item %></td>
          <td class="text-right"><%= number_to_currency order_item.total_price %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= render 'orders/totals', order: @order, just_subtotal: false %>
